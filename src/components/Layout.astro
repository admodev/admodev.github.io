      <title>{title}</title>
      <link rel="stylesheet" href="/assets/style.css" />
    </head>
    <body>
      <header>
        <nav>
          <a href="/">Home</a>
          <a href="/projects">Projects</a>
          <a href="/skills">Skills</a>
          <a href="/contact">Contact</a>
        </nav>
      </header>
      <main><slot /></main>
    </body>
  </html>
</Fragment>
